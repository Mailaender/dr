@@ -322,10 +322,27 @@
 
 		static bool quit;
 		public static event Action OnQuit = () => {};
+		
 		internal static void Run()
 		{
+			ushort mSecToWaitInCycle = (ushort) (1000/Settings.Graphics.FrameRate);
+			
 			while (!quit)
+			{
+				var sw = System.Diagnostics.Stopwatch.StartNew();
 				Tick( orderManager, viewport );
+				if ( Settings.Graphics.CapFrameRate && (sw.Elapsed.TotalMilliseconds < mSecToWaitInCycle ) )
+				{//Use Thread.Sleep(mSecToWaitInCycle - sw.Elapsed.TotalMilliseconds) but find a better sleep func at first
+					while (true)
+					{
+						if (sw.Elapsed.TotalMilliseconds >= mSecToWaitInCycle)
+							break;
+						System.Threading.Thread.Sleep(1);
+					}
+				}
+				if (Settings.Graphics.DebugFrameRate)
+					Debug("Frame Rate: {0}", (float) 1000.0/sw.Elapsed.TotalMilliseconds);
+			}
 
 			OnQuit();
 		}
